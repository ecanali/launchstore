{% extends 'layout.njk' %}

{% block content %}

    <section class="container form">

        {# form com "enctype" vai permitir receber arquivos no backend (as fotos) #}
        <form method="POST" action="/products" enctype="multipart/form-data">

            <div class="header">
                <h3>Cadastrar Produto</h3>
            </div>

            <div class="fields">
                {% include 'products/fields.njk' %}
            </div>
            
            <button class= "button" type="submit" onclick="Validate.allFields(event)">Salvar</button>

        </form>

    </section>

{% endblock content %}